{% extends 'base.html.twig' %}

{% block title %}Клиент{% endblock %}

{% block body %}
    <h1>Клиент</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Имя</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Фамилия</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Номер телефона</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Образование</th>
                <td>{{ user.education }}</td>
            </tr>
            <tr>
                <th>Согласие на обработку данных</th>
                <td>{{ user.isAcceptData }}</td>
            </tr>
            <tr>
                <th>Баллы скоринга</th>
                <td>{{ user.scoring }}</td>
            </tr>
        </tbody>
    </table>
    <div class="mb-3">
        <a class="btn btn-primary" href="{{ path('app_users_index') }}">На главную</a>
    </div>
    <div class="mb-3">
        <a class="btn btn-primary" href="{{ path('app_users_edit', {'id': user.id}) }}">Изменить</a>
    </div>
    <div class="mb-3">
        {{ include('users/_delete_form.html.twig') }}
    </div>
{% endblock %}
