{% extends 'base.html.twig' %}

{% block title %}Список клиентов{% endblock %}

{% block body %}
    <h1>Список клиетов</h1>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Баллы скоринга</th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody>
        {% for user in pagination %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.scoring }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('app_users_show', {'id': user.id}) }}">Изменить</a><br>
                    {{ include('users/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">В таблице отсутствуют записи клиентов</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="mb-3">
        <a class="btn btn-primary" href="{{ path('app_users_new') }}">Добавить клиента</a>
    </div>
    <div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>
{% endblock %}
